@{
    ViewData["Title"] = "Contact Elite Haven";
}

<style>
    :root {
        --primary-blue: #0A7EA3;
        --secondary-blue: #5DB7DE;
        --accent-gold: #D4AF37;
        --light-azure: #E1F5FE;
        --dark-teal: #00796B;
        --pure-white: #FFFFFF;
        --light-gray: #F5F5F5;
        --dark-gray: #333333;
    }

    .contact-container {
        background: url('https://images.unsplash.com/photo-1512917774080-9991f1c4c750?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1170&q=80') no-repeat center center;
        background-size: cover;
        position: relative;
        padding: 5rem 0;
    }

        .contact-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(10, 126, 163, 0.85);
        }

    .contact-content {
        position: relative;
        z-index: 2;
        color: var(--pure-white);
    }

    .contact-title {
        font-weight: 700;
        letter-spacing: 1px;
        position: relative;
        padding-bottom: 1rem;
    }

        .contact-title:after {
            content: '';
            position: absolute;
            width: 80px;
            height: 3px;
            background: var(--accent-gold);
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
        }

    .contact-divider {
        width: 100%;
        height: 1px;
        background: rgba(255, 255, 255, 0.2);
        margin: 2rem 0;
    }

    .contact-card {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 12px;
        padding: 2rem;
        transition: all 0.4s ease;
        height: 100%;
    }

        .contact-card:hover {
            background: rgba(255, 255, 255, 0.15);
            transform: translateY(-5px);
        }

    .contact-icon {
        font-size: 2rem;
        color: var(--accent-gold);
        margin-bottom: 1.5rem;
    }

    .contact-info-title {
        font-size: 1.25rem;
        font-weight: 600;
        margin-bottom: 1rem;
        color: var(--pure-white);
    }

    .contact-info-text {
        color: rgba(255, 255, 255, 0.8);
        line-height: 1.7;
    }

    .contact-form {
        background: var(--pure-white);
        border-radius: 12px;
        padding: 2.5rem;
        box-shadow: 0 15px 40px rgba(0, 0, 0, 0.1);
    }

    .form-label {
        color: var(--dark-teal);
        font-weight: 500;
        margin-bottom: 0.5rem;
    }

    .form-control {
        border: 1px solid #e0e0e0;
        border-radius: 8px;
        padding: 0.75rem 1rem;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: var(--secondary-blue);
            box-shadow: 0 0 0 0.25rem rgba(93, 183, 222, 0.25);
        }

    .btn-contact {
        background-color: var(--accent-gold);
        color: var(--dark-gray);
        border: none;
        border-radius: 8px;
        padding: 0.75rem 2rem;
        font-weight: 600;
        letter-spacing: 0.5px;
        transition: all 0.3s ease;
    }

        .btn-contact:hover {
            background-color: var(--dark-teal);
            color: var(--pure-white);
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

    .social-link {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.1);
        color: var(--pure-white);
        font-size: 1.25rem;
        margin-right: 0.75rem;
        transition: all 0.3s ease;
    }

        .social-link:hover {
            background: var(--accent-gold);
            color: var(--dark-gray);
            transform: translateY(-3px);
        }
</style>

<div class="contact-container">
    <div class="container contact-content">
        <div class="text-center mb-5">
            <h1 class="contact-title display-4">Get In Touch</h1>
            <p class="lead mb-0">We're here to help and answer any questions you might have.</p>
        </div>

        <div class="contact-divider"></div>

        <div class="row g-4 mb-5">
            <div class="col-md-4">
                <div class="contact-card text-center">
                    <i class="bi bi-geo-alt-fill contact-icon"></i>
                    <h3 class="contact-info-title">Our Location</h3>
                    <p class="contact-info-text">
                        Elite Haven Villas<br>
                        123 Luxury Avenue<br>
                        Dubai Marina, Dubai<br>
                        United Arab Emirates
                    </p>
                </div>
            </div>

            <div class="col-md-4">
                <div class="contact-card text-center">
                    <i class="bi bi-envelope-fill contact-icon"></i>
                    <h3 class="contact-info-title">Email Us</h3>
                    <p class="contact-info-text">
                        bookings@elitehaven.com<br>
                        support@elitehaven.com<br>
                        info@elitehaven.com
                    </p>
                    <a href="mailto:bookings@elitehaven.com" class="btn btn-contact mt-3">
                        Send Email
                    </a>
                </div>
            </div>

            <div class="col-md-4">
                <div class="contact-card text-center">
                    <i class="bi bi-telephone-fill contact-icon"></i>
                    <h3 class="contact-info-title">Call Us</h3>
                    <p class="contact-info-text">
                        +971 4 123 4567<br>
                        +971 4 123 4568<br>
                        24/7 Availability
                    </p>
                    <a href="tel:+97141234567" class="btn btn-contact mt-3">
                        Call Now
                    </a>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-6 mb-4 mb-lg-0">
                <div class="contact-form">
                    <h2 class="mb-4" style="color: var(--primary-blue);">Send Us a Message</h2>
                    <form>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label for="name" class="form-label">Full Name</label>
                                <input type="text" class="form-control" id="name" required>
                            </div>
                            <div class="col-md-6">
                                <label for="email" class="form-label">Email Address</label>
                                <input type="email" class="form-control" id="email" required>
                            </div>
                            <div class="col-12">
                                <label for="subject" class="form-label">Subject</label>
                                <input type="text" class="form-control" id="subject" required>
                            </div>
                            <div class="col-12">
                                <label for="message" class="form-label">Your Message</label>
                                <textarea class="form-control" id="message" rows="5" required></textarea>
                            </div>
                            <div class="col-12">
                                <button type="submit" class="btn btn-contact w-100 py-2">
                                    <i class="bi bi-send-fill me-2"></i> Send Message
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="h-100 d-flex flex-column justify-content-between">
                    <div class="contact-card">
                        <h3 class="contact-info-title mb-3">Business Hours</h3>
                        <ul class="list-unstyled contact-info-text">
                            <li class="mb-2 d-flex justify-content-between">
                                <span>Monday - Friday:</span>
                                <span>8:00 AM - 10:00 PM</span>
                            </li>
                            <li class="mb-2 d-flex justify-content-between">
                                <span>Saturday:</span>
                                <span>9:00 AM - 8:00 PM</span>
                            </li>
                            <li class="d-flex justify-content-between">
                                <span>Sunday:</span>
                                <span>10:00 AM - 6:00 PM</span>
                            </li>
                        </ul>
                    </div>

                    <div class="contact-card mt-4">
                        <h3 class="contact-info-title mb-3">Follow Us</h3>
                        <div class="d-flex">
                            <a href="#" class="social-link"><i class="bi bi-facebook"></i></a>
                            <a href="#" class="social-link"><i class="bi bi-instagram"></i></a>
                            <a href="#" class="social-link"><i class="bi bi-twitter-x"></i></a>
                            <a href="#" class="social-link"><i class="bi bi-linkedin"></i></a>
                            <a href="#" class="social-link"><i class="bi bi-pinterest"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>