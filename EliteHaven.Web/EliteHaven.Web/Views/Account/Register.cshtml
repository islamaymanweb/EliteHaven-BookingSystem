            <div class="register-form">
                <div class="form-header">
                    <h3>Create Account</h3>
                    <p>Start your luxury journey</p>
                </div>
                
                <form method="post" class="register-form-content">
                    <input asp-for="RedirectUrl" hidden />
                    
                    <div class="row g-3">
                        <!-- Email -->
                        <div class="col-12">
                            <div class="form-group">
                                <label asp-for="Email">Email Address</label>
                                <div class="input-group">
                                    <span class="input-icon"><i class="bi bi-envelope" style="color: #0A7EA3;"></i></span>
                                    <input asp-for="Email" class="form-control" placeholder="your@email.com" required>
                                </div>
                                <span asp-validation-for="Email" class="validation-error"></span>
                            </div>
                        </div>
                        
                        <!-- Name -->
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Full Name</label>
                                <div class="input-group">
                                    <span class="input-icon"><i class="bi bi-person" style="color: #0A7EA3;"></i></span>
                                    <input asp-for="Name" class="form-control" placeholder="John Doe" required>
                                </div>
                                <span asp-validation-for="Name" class="validation-error"></span>
                            </div>
                        </div>
                        
                        <!-- Phone -->
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Phone Number</label>
                                <div class="input-group">
                                    <span class="input-icon"><i class="bi bi-phone" style="color: #0A7EA3;"></i></span>
                                    <input asp-for="PhoneNumber" class="form-control" placeholder="+1234567890">
