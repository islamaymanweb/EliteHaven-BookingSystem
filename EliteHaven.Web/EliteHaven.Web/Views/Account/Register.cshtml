                                <span asp-validation-for="PhoneNumber" class="validation-error"></span>
                            </div>
                        </div>
                        
                        <!-- Password -->
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Password">Password</label>
                                <div class="input-group">
                                    <span class="input-icon"><i class="bi bi-lock" style="color: #0A7EA3;"></i></span>
                                    <input type="password" asp-for="Password" class="form-control" placeholder="••••••••" required>
                                    <button type="button" class="password-toggle">
                                        <i class="bi bi-eye" style="color: #0A7EA3;"></i>
                                    </button>
                                </div>
                                <span asp-validation-for="Password" class="validation-error"></span>
                            </div>
                        </div>
                        
                        <!-- Confirm Password -->
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="ConfirmPassword">Confirm Password</label>
                                <div class="input-group">
                                    <span class="input-icon"><i class="bi bi-lock" style="color: #0A7EA3;"></i></span>
                                    <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="••••••••" required>
                                    <button type="button" class="password-toggle">
                                        <i class="bi bi-eye" style="color: #0A7EA3;"></i>
                                    </button>
                                </div>
                                <span asp-validation-for="ConfirmPassword" class="validation-error"></span>
                            </div>
                        </div>
                        
